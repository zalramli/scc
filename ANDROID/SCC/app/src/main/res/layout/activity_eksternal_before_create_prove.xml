<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".Activities.Eksternal.BeforeCreateProve.EksternalBeforeCreateProveActivity">

	<com.google.android.material.appbar.AppBarLayout
		android:id="@+id/app_bar_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true">

		<androidx.appcompat.widget.Toolbar
			android:id="@+id/toolbar"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			app:theme="@style/ToolbarTheme"
			app:titleTextColor="@color/white">

		</androidx.appcompat.widget.Toolbar>

	</com.google.android.material.appbar.AppBarLayout>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/app_bar_layout">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:orientation="vertical">

			<com.google.android.material.textfield.TextInputLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<TextView
					android:id="@+id/tv_nama_materi"
					android:layout_width="match_parent"
					android:layout_height="40sp"
					android:gravity="center_vertical"
					android:text="Nama Materi"
					android:textAlignment="center"
					android:textSize="17sp"
					android:textStyle="bold" />

			</com.google.android.material.textfield.TextInputLayout>

			<com.google.android.material.textfield.TextInputLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<TextView
					android:id="@+id/tv_detail_prove"
					android:layout_width="match_parent"
					android:layout_height="40sp"
					android:gravity="center_vertical"
					android:text="Hari , (Jam Mulai - Jam Selesai)"
					android:textSize="17sp" />

			</com.google.android.material.textfield.TextInputLayout>

			<com.google.android.material.textfield.TextInputLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<TextView
					android:id="@+id/tv_nama_internal"
					android:layout_width="match_parent"
					android:layout_height="40sp"
					android:gravity="center_vertical"
					android:text="Nama Internal"
					android:textSize="17sp" />

			</com.google.android.material.textfield.TextInputLayout>

			<com.google.android.material.textfield.TextInputLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<TextView
					android:id="@+id/tv_tanggal_prove"
					android:layout_width="match_parent"
					android:layout_height="40sp"
					android:layout_marginRight="10dp"
					android:drawableEnd="@drawable/ic_date_range"
					android:drawableRight="@drawable/ic_date_range"
					android:gravity="center_vertical"
					android:text="Tanggal Prove"
					android:textSize="17sp" />

			</com.google.android.material.textfield.TextInputLayout>

			<com.google.android.material.textfield.TextInputLayout
				android:id="@+id/layout_content"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<EditText
					android:id="@+id/edt_deskripsi_materi"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:hint="Deskripsi Materi ..."
					android:lines="3" />

			</com.google.android.material.textfield.TextInputLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<Button
					android:id="@+id/btn_batal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginRight="5dp"
					android:layout_weight="1"
					android:drawableStart="@drawable/ic_close"
					android:drawableLeft="@drawable/ic_close"
					android:text="Batal" />

				<Button
					android:id="@+id/btn_submit"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:layout_weight="1"
					android:drawableStart="@drawable/ic_add"
					android:drawableLeft="@drawable/ic_add"
					android:text="Simpan" />

			</LinearLayout>

		</LinearLayout>

	</ScrollView>

</RelativeLayout>
