<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">

	<androidx.cardview.widget.CardView
		android:id="@+id/cv_item_adapter_list_jadwal_bs"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="10sp"
		android:layout_marginTop="10sp"
		android:layout_marginRight="10sp"
		android:focusable="true"
		android:foreground="?attr/selectableItemBackground"
		app:cardBackgroundColor="@color/colorPrimary2"
		app:cardCornerRadius="10dp"
		app:cardElevation="5dp">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:layout_margin="10sp"
				android:orientation="vertical">

				<TextView
					android:id="@+id/tv_hari"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Hari"
					android:textAlignment="center"
					android:textColor="@color/white"
					android:textSize="16dp" />

				<TextView
					android:id="@+id/tv_jam"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="( Jam Mulai Sampai Jam Selesai )"
					android:textAlignment="center"
					android:textColor="@color/white"
					android:textSize="16dp" />

<!--				<TextView-->
<!--					android:id="@+id/tv_status_booking"-->
<!--					android:layout_width="match_parent"-->
<!--					android:layout_height="wrap_content"-->
<!--					android:layout_weight="1"-->
<!--					android:text="Status : Free"-->
<!--					android:textAlignment="center"-->
<!--					android:textColor="@color/white"-->
<!--					android:textSize="16dp" />-->

			</LinearLayout>
		</RelativeLayout>
	</androidx.cardview.widget.CardView>

</LinearLayout>
